{
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "globals": {
    "fetch": true
  },
  "extends": [
    "airbnb",
    "plugin:ava/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "ava",
    "prettier"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "trailingComma": "all",
    },
  ]
}
